# Configurações do ambiente de desenvolvimento
# Copie este arquivo para .env e ajuste conforme necessário

# Configurações da aplicação
APP_PORT=8080
APP_ENV=development
APP_LOG_LEVEL=debug

# Token de autenticação para desenvolvimento
AUTH_TOKEN=dev-token-123456

# Configurações do Kubernetes
# Para desenvolvimento local, deixe em branco para usar kubeconfig padrão
KUBECONFIG_PATH=

# Configurações do banco de dados
DB_HOST=localhost
DB_PORT=5432
DB_NAME=k8s_metrics
DB_USER=postgres
DB_PASSWORD=postgres123
DB_SSL_MODE=disable

# Configurações do Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Configurações do Prometheus
PROMETHEUS_NAMESPACE=k8s_api_metrics
PROMETHEUS_SUBSYSTEM=api

# Configurações de rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60s

# Configurações de timeout
REQUEST_TIMEOUT=30s
SHUTDOWN_TIMEOUT=30s

# Configurações de TLS (para produção)
TLS_ENABLED=false
TLS_CERT_FILE=
TLS_KEY_FILE=

# Configurações de observabilidade
JAEGER_ENDPOINT=http://localhost:14268/api/traces
JAEGER_SERVICE_NAME=k8s-api-metrics
JAEGER_ENABLED=true

# Configurações de health check
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=5s

# Configurações de desenvolvimento
DEV_MODE=true
HOT_RELOAD=true
DEBUG_MODE=true
